<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ecommerce Cart</title>

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <style>
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f7f7f7;
        }

        .user-text {

            color: #520eac;
        }

        .label {
            color: #520eac;
        }

        .password-fields {
            display: none;
        }

        .add-form label {
            font-weight: bold;
        }
    </style>
</head>

<body>

    <%- include("../partials/userHeader") %>

        <div class="container">
            <div class="h3 fw-bold mt-3 user-text py-1">
                Wish List
            </div>

            <div class="row">
                <% wishList.forEach(item=> { %>
                    <div class="col-md-8 my-3">
                        <div class="card p-3">
                            <div class="row align-items-center">
                                <div class="col-4 col-md-2">
                                    <img style="max-width: 100%;" src="/image/product/<%= item.products.image[0] %>"
                                        alt="">
                                </div>
                                <div class="col-8 col-md-10">
                                    <p class="h5 fw-bold">
                                        <%= item.products.name %>
                                    </p>

                                    <div class="d-flex align-items-center">
                                        <p class="text-success fw-bold">â‚¹<%= item.products.price %>
                                        </p>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <input onclick="addToCart('<%= item.products._id %>')" type="button"
                                            value="Add to cart" class="btn btn-success user-btn">
                                        <input type="button" value="remove"
                                            onclick="removeWishlist('<%= item.products._id %>')" style="cursor:pointer"
                                            class="ms-3 btn btn-danger clear-btn">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>



        <!-- Footer -->
        <%- include("../partials/footer") %>

            <script>

                const addToCart = async (productID) => {
                    try {
                        const response = await fetch(`/cart/add-to-cart/${productID}`, {
                            method: 'GET'
                        });

                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }

                        const data = await response.json();

                        if (data.status) {
                            let cartCount = document.getElementById('cartCount');
                            if (cartCount) {
                                cartCount.innerText = data.count;
                            }
                            Swal.fire({
                                icon: 'success',
                                title: 'Product Added',
                                text: 'This product added to the cart.',
                            });
                        } else {
                            if (data.error && data.error === "Product Out of Stock") {
                                await Swal.fire({
                                    icon: 'warning',
                                    title: 'Product Out of Stock',
                                    text: 'This product is currently out of stock.',
                                });

                            } else {
                                location.assign('/cart');
                            }
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        await Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred while adding the product to the cart.'
                        });
                    }
                };


                removeWishlist = async (id) => {
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "Are you sure want to remove this product from wishlist",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: 'grey',
                        confirmButtonText: 'Yes, remove it!'
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            await fetch(`/my-account/remove-from-wishlist/${id}`, {
                                method: 'GET'
                            }).then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        location.assign('/my-account/wishlist');
                                    }
                                });
                        }
                    });
                };

            </script>

            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>

</html>