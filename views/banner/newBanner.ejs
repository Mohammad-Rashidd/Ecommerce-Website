            }
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }


        th.actions {
            width: 30%;
        }

        .list-group-item:hover {
            background-color: #007bff;

            color: #b40b0b;
        }

        .error {
            color: rgb(255, 0, 0)
        }

        .crop-banner {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 4;
            width: 30rem;

        }
    </style>
</head>

<body>

