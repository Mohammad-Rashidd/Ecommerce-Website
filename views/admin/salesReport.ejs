<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript"
        src="https://www.shieldui.com/shared/components/latest/js/shieldui-all.min.js"></script>
    <script type="text/javascript" src="https://www.shieldui.com/shared/components/latest/js/jszip.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.0/xlsx.full.min.js"></script>


    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            padding-top: 70px;
        }




        #sidebar-wrapper {
            width: 250px;
            background-color: #343a40;
            color: #ffffff;

        }

        #sidebar-wrapper .sidebar-heading {
            text-align: center;
            padding: 20px 0;
        }

        #sidebar-wrapper .list-group-item {
            padding: 15px;
            text-align: center;
            border: none;
            color: #ffffff;

        }

        #sidebar-wrapper .list-group-item:hover {
            background-color: #007bff;
        }


        #page-content-wrapper {
            width: calc(100% - 250px);
            height: 100vh;
        }

        .navbar {
            background-color: #000000;

            box-shadow: 0 4px 2px -2px gray;
            min-height: 20px;
            padding: 3px;
        }

        .navbar-brand {
            font-size: 1.5rem;
        }

        .navbar-toggler {
            background-color: #007bff;

        }

        .navbar-nav {
            margin-left: auto;
        }

        .navbar-nav .nav-item {
            margin-left: 10px;
        }

        .navbar-nav .nav-link {
            color: #ffffff;
        }

        .navbar-brand img {
            height: 20px;

            margin-right: 10px;

        }

        .container-fluid {
            padding: 10px;
        }

        .profile-pic {
            width: 100px;
            height: 100px;
        }



        #sidebarToggle {
            background-color: #9ab9da;
            color: #ffffff;
            border: none;
            padding: 8px 10px;
            cursor: pointer;
            display: none;
        }

        @media (max-width: 992px) {
            #wrapper.toggled #sidebar-wrapper {
                margin-left: -250px;
            }

            #sidebarToggle {
                display: block;
            }
        }

        .list-group-item:hover {
            background-color: #007bff;

            color: #b40b0b;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" id="sidebarToggle">
                <span class="navbar-toggler-icon"></span>
            </button>

            <a class="navbar-brand" href="#">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRbc84oY0DleNaQ5jQUEszXCwXLWkGLmeutZQ&usqp=CAU"
                    alt="Logo">
                eCart Admin
            </a>


            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Sidebar and Page Content -->

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-dark text-light " id="sidebar-wrapper">
            <div class="sidebar-heading py-4 px-3">
                <img src="/image/photo.png" alt="Profile Photo" class="img-fluid profile-pic rounded-circle mb-2">
                <h5>Mohammad Rashid</h5>
            </div>
            <div class="list-group list-group-flush">
                <a href="/admin/dash"
                    class="list-group-item list-group-item-action fa-solid fas fa-layer-group bg-dark text-light mb-2">
                    Dashboard</a>
                <a href="/admin/allusers"
                    class="list-group-item list-group-item-action fa-solid fas fa-user bg-dark text-light mb-2">
                    Users</a>
                <a href="/admin/categories"
                    class="list-group-item list-group-item-action fa-solid fas fa-th-large bg-dark text-light mb-2">
                    Categories</a>
                <a href="/admin/products"
                    class="list-group-item list-group-item-action fa-solid fas fa-box-open bg-dark text-light mb-2">
                    Products</a>
                <a href="/admin/orders"
                    class="list-group-item list-group-item-action fa-solid fas fa-cart-arrow-down bg-dark text-light">
                    Orders</a>
                <a href="/admin/banners"
                    class="list-group-item list-group-item-action fa-solid fas fa-flag bg-dark text-light"> Manage
                    Banner</a>
                <a href="/admin/coupons"
                    class="list-group-item list-group-item-action fa-solid fas fa-money-bill-wave bg-dark text-light">
                    Manage
                    Coupen</a>
                <a href="/admin/sales-report"
                    class="list-group-item list-group-item-action fa-solid fas fa-file-export bg-dark text-light"> Sales
                    Report</a>
                <a href="/admin/notifications"
                    class="list-group-item list-group-item-action fa-solid fas fa-bell bg-dark text-light"> Return
                    Requests</a>
            </div>
        </div>


        <!-- Page content -->
        <div id="page-content-wrapper">

            <div class="container-fluid py-4 ">

                <div class="object-fit-contain mt-3">
                    <div class="header d-flex py-3 justify-content-between">
                        <h3 class="h3 text-second fw-bold mb-3">Sales Report</h3>
                        <div class="file">
                            <span style="cursor: pointer;" class="fw-bold text-second  filter-show">Filter <i
                                    class="fa-solid fa fa-filter"></i></span>
                            <button id="exportToButton" class="btn btn-success add-btn">
                                <i class="fas fa-download"></i> Pdf</button>
                            <button id="exportButton" class="btn btn-success  add-btn ms-auto">
                                <i class="fas fa-download"></i> Excel</button>
                        </div>
                    </div>
                    <form method="post" action="/admin/sales-report/filter">
                        <div class="filterDiv card py-3 px-2 my-2">
                            <div class="d-flex align-items-center justify-content-around">
                                <div class="iputs">
                                    <label class="me-2" for="">Date From</label>
                                    <input style="width: 10rem;" class="form-control " type="date" name="from" id="">
                                </div>
                                <div class="iputs">
                                    <label class="ms-2" for="">Date To</label>
                                    <input style="width: 10rem;" class="form-control ms-2 " type="date" name="to" id="">
                                </div>
                                <div class="iputs">
                                    <label for="exampleFormControlSelect1">Payment Method</label>
                                    <select class="form-select" name="payment_method" id="exampleFormControlSelect1">
                                        <option>All</option>
                                        <option>COD</option>
                                        <option>Online Payment</option>
                                    </select>
                                </div>
                            </div>
                            <input type="submit" id="filterSubmit" value="Filter"
                                class="btn mt-3 btn-warning add-btn rounded">
                        </div>
                    </form>
                    <table style="width: 100%;" id="exportToTable" class="table table-striped table-bordered table-sm"
                        cellspacing="0" width="100%">
                        <thead class="table-dark">
                            <tr>
                                <th class="th-sm">Customer</th>
                                <th class="th-sm">Product_Name</th>
                                <th class="th-sm">Ordered_Date</th>
                                <th class="th-sm">Delivered_Date</th>
                                <th class="th-sm">Quantity</th>
                                <th class="th-sm">Category</th>
                                <th class="th-sm">Payment</th>
                                <th class="th-sm">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% salesReport.forEach(function(item) { %>
                                <tr>
                                    <td>
                                        <%= item.user.username %>
                                    </td>
                                    <td>
                                        <%= item.product.name %>
                                    </td>
                                    <td>
                                        <%= item.createdAt %>
                                    </td>
                                    <td>
                                        <%= item.items.delivered_on %>
                                    </td>
                                    <td>
                                        <%= item.items.quantity %>
                                    </td>
                                    <td>
                                        <%= item.category.name %>
                                    </td>
                                    <td>
                                        <%= item.payment_method %>
                                    </td>
                                    <td>
                                        <%= item.items.price * item.items.quantity %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

    <script>

        $(document).ready(() => {
            new DataTable('#exportToTable');
            $('.filterDiv').hide();
            $('.filter-show').on('click', () => {
                $('.filterDiv').slideToggle();
            })

            $("#exportToButton").click(function () {
                Swal.fire({
                    title: 'Are you sure',
                    text: "Do you want to download the sales report?",
                    icon: 'info',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#D3DBEE',
                    confirmButtonText: 'Download'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire(
                            'Downloading..',
                            'Your file is being downloaded.',
                            'success'
                        ).then(() => {
                            const table = $('#exportToTable').DataTable();
                            const data = table.rows().data().toArray();

                            const pdf = new shield.exp.PDFDocument({
                                author: "eCart",
                                created: new Date()
                            });
                            pdf.addPage("a4", "landscape");
                            pdf.table(
                                50,
                                50,
                                data,
                                [
                                    { field: "0", title: "Customer", width: 70 },
                                    { field: "1", title: "Product Name", width: 150 },
                                    { field: "2", title: "Ordered Date", width: 100 },
                                    { field: "3", title: "Delivered Date", width: 100 },
                                    { field: "4", title: "Quantity", width: 70 },
                                    { field: "5", title: "Category", width: 100 },
                                    { field: "6", title: "Payment", width: 100 },
                                    { field: "7", title: "Amount", width: 70 },
                                ],
                                {
                                    margins: {
                                        top: 50
                                    }
                                }
                            );

                            pdf.saveAs({
                                fileName: "SalesReport"
                            });
                        })
                    }
                })
            });

            $("#exportButton").click(function () {
                Swal.fire({
                    title: 'Are you sure',
                    text: "Do you want to download the sales report?",
                    icon: 'info',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#D3DBEE',
                    confirmButtonText: 'Download'
                }).then((result) => {
                    if (result.isConfirmed) {
                        const table = $('#exportToTable').DataTable();
                        const data = table.rows().data().toArray();
                        const ws = XLSX.utils.aoa_to_sheet(data);
                        const wb = XLSX.utils.book_new();
                        XLSX.utils.book_append_sheet(wb, ws, "SalesReport");
                        XLSX.writeFile(wb, 'SalesReport.xlsx');
                    }
                });
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebarToggle = document.getElementById("sidebarToggle");
        sidebarToggle.addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>
</body>

</html>